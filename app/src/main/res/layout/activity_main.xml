<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="@dimen/activity_horizontal_margin">


    <Button
        android:id="@+id/sample_google_map_fragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sample_button_height"
        android:layout_marginTop="@dimen/sample_button_spacing"
        android:text="@string/sample_google_map_fragment"/>

    <Button
        android:id="@+id/sample_google_map_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sample_button_height"
        android:layout_marginTop="@dimen/sample_button_spacing"
        android:text="@string/sample_google_map_view"/>

    <Button
        android:id="@+id/sample_dialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sample_button_height"
        android:layout_marginTop="@dimen/sample_button_spacing"
        android:text="@string/sample_dialog_and_menu"/>

    <Button
        android:id="@+id/sample_map_dialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sample_button_height"
        android:layout_marginTop="@dimen/sample_button_spacing"
        android:text="@string/sample_map_dialog"/>

    <Button
        android:id="@+id/sample_ignore_views"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sample_button_height"
        android:layout_marginTop="@dimen/sample_button_spacing"
        android:text="@string/sample_ignore_views"/>

    <Button
        android:id="@+id/sample_custom_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sample_button_height"
        android:layout_marginTop="@dimen/sample_button_spacing"
        android:text="@string/sample_custom_view"/>

    <Button
        android:id="@+id/sample_gl_surface_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sample_button_height"
        android:layout_marginTop="@dimen/sample_button_spacing"
        android:text="@string/sample_gl_surface_view"/>

  </LinearLayout>
</ScrollView>
